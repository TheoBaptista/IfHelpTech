<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#ECECEC"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/question_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blacklight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/question_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_title_textview"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/quicksand_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/blacklight" />

        <TextView
            android:id="@+id/question_topic_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_description_textview"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/quicksand_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/blacklight" />

        <TextView
            android:id="@+id/email_author_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_topic_textview"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/quicksand_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/blacklight" />

        <ImageButton
            android:id="@+id/shared_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_author_textview"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/compartilhar"
            android:src="@android:drawable/ic_menu_send" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>